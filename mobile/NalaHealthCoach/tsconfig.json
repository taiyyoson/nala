{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "module": "NodeNext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
